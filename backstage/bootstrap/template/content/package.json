{
  "name": "${{ values.name | safe | lower | replace(' ', '-') }}",
  "author": "${{ values.owner | safe }}",
  "description": "${{ values.description | safe }}",
  "private": true,
  "version": "0.0.1",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "clean": "rm -rf dist",
    "commitlint": "commitlint --edit",
    "lint": "eslint .",
    "prepare": "husky",
    "prettier": "prettier --config .prettierrc.json --ignore-path .gitignore --ignore-path .prettierignore --write .",
    "start": "NODE_ENV=development tsx src/index.ts",
    "start:staging": "NODE_ENV=staging tsx src/index.ts",
    "serve": "node dist/index.js",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.6.4",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.7.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "eslint": "^8.57.0",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1"
  }
}
