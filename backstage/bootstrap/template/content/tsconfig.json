{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"],
    "module": "CommonJS",
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "types": ["Node", "Jest"],
  }
}
